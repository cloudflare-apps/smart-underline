@import nib

@import url("http://fonts.googleapis.com/css?family=Merriweather:400")

html
  font-size 16px

  @media (min-width 1681px)
    font-size 20px

a:focus
  outline thin dotted

body
  -webkit-font-smoothing antialiased
  font-family "Merriweather", serif
  color #000
  width 36em
  max-width 100%
  padding 1em
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  margin-left auto
  margin-right auto

header
  text-align center

h1
  padding-top 2em
  font-size 1.875em
  font-family Futura, sans-serif
  font-weight normal
  letter-spacing .04em
  text-indent .04em

  @media (max-width 768px)
    padding-top 0

  a

    &, &:visited
      color inherit
      text-decoration none

.share
  margin 1em auto
  font-size 0
  text-align center

  iframe
    display inline-block
    vertical-align middle
    background #eee
    border-radius 5px
    margin-left auto
    margin-right auto
    border 0
    height 2.3rem
    opacity 0.8

    &:hover
      opacity 1

    &.github
      width 12rem
      margin-right 1rem

    &.twitter
      width 8.5rem

h2 a

  &, &:visited
    color inherit

h1 + h2
  font-size 1em
  font-weight normal
  margin-top 0

h3
  text-align center
  font-size 1em
  font-family Futura, sans-serif
  font-weight bold
  text-transform uppercase
  letter-spacing .25em
  text-indent .25em
  padding-top 3.75em
  margin 0 auto
  margin-bottom 1.5em

  @media (max-width 768px)
    font-weight normal

p
  text-indent 1.5em
  margin 1em 0

p, ul
  line-height 1.8em

p.example-header
  text-indent 0
  margin-top 2.25em
  text-align center

p.example
  text-indent 0
  font-size 1.5em
  text-align center
  margin .666em 0

  > span:nth-child(2)
    margin-left 2em

  &.rtl
    > span:nth-child(2)
      margin-right 2em
      margin-left 0

  @media (max-width 768px)
    font-size 1em
    margin 2em 0

    > span
      display block

      &:nth-child(2)
        padding-top .75em
        margin-left 0

    &.rtl  > span:nth-child(2)
      margin-right 0

section
  margin 2em auto
  padding 1.5em
  border-radius .3125em

  h3
    padding-top .5em

  > *:first-child
    margin-top 0

  > *:last-child
    margin-bottom 0

  &.about
    background #ddedff
    color #303786

    a
      color darken(#303786, 20%)

  &.before-and-after
    background #bbf0c7
    color #278541

    a
      color darken(#278541, 20%)

  &.limitations
    background #fff5d6
    color #713b1b

    a
      color darken(#713b1b, 20%)

footer
  text-align center

  p
    text-indent 0

  a.eager
    color #e90f92
